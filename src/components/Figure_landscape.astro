---
interface Props {
  caption: string;
  widthRatio?: string;
  widthRatioCaption?: string;
}

const { caption, widthRatio = "90%", widthRatioCaption = "90%" } = Astro.props;
const captionWidth = widthRatioCaption || widthRatio;
---

<figure class="w-full flex flex-col gap-2 items-center">
  <div class="*:max-h-[35rem] *:object-contain flex justify-center w-full">
    <div style={`max-width: ${widthRatio};`}>
      <slot />
    </div>
  </div>
  <figcaption class="text-center text-zinc-700" style={`max-width: ${captionWidth};`}>
    {caption}
  </figcaption>
</figure> 