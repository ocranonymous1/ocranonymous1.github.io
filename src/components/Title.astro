---
interface Props {
  text: string;
  size?: "small" | "medium" | "large";
}

const { text, size = "medium" } = Astro.props;

const sizeClasses = {
  small: "text-xl",
  medium: "text-2xl",
  large: "text-3xl"
};

const sizeClass = sizeClasses[size];
---

<div class="w-full flex justify-center my-6">
  <h2 class={`${sizeClass} font-semibold text-center max-w-4xl`}>{text}</h2>
</div> 